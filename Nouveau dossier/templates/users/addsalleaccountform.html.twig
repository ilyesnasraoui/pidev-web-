{% extends 'base.html.twig' %}

{% block title %}New Planning{% endblock %}

{% block body %}

    <h3><i class="fa fa-angle-right"></i> Add a new room</h3>
    <div class="row mt">
        <div class="col-lg-12">
            <div class="form-panel">
                <form class="form-horizontal  style-form" method="post"  action="{{ path('newsalleaccount') }}">
                    <div class="form-group">
                        <label class="col-sm-4 col-sm-3 control-label">Salle name</label>
                        <div class="col-sm-4">
                            <input type="text"  class="form-control" name="name" id="palces" required="required">
                        </div>
                    </div>
                        <div class="form-group">
                            <label class="col-sm-4 col-sm-3 control-label">Salle adress</label>
                            <div class="col-sm-4">
                                <input type="text"  class="form-control" name="adress" id="adress" required="required">
                            </div>
                        </div>
                    <div class="form-group">
                        <label class="col-sm-4 col-sm-3 control-label">governorate</label>
                        <div class="col-sm-4">
                            <input type="text"  class="form-control" name="governorate" id="governorate" required="required">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 col-sm-3 control-label">Salle pseudo</label>
                        <div class="col-sm-4">
                            <input type="text"  class="form-control" name="username" id="username" required="required">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 col-sm-3 control-label">Password</label>
                        <div class="col-sm-4">
                            <input type="password"  class="form-control" name="password" id="password" required="required">
                        </div>
                    </div>
                        <div class="form-group">
                            <label class="col-sm-4 col-sm-3 control-label">Phone number</label>
                            <div class="col-sm-4">
                                <input type="tel"  class="form-control" name="phone" id="phone"   pattern="{8}" required="required">
                            </div>
                        </div>
                    <div class="form-group">
                        <label class="col-sm-4 col-sm-3 control-label">Email</label>
                        <div class="col-sm-4">
                            <input type="email"  class="form-control" name="email" id="email" required="required">
                        </div>
                    </div>



                    <div class="form-group">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-theme">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>


{% endblock %}
