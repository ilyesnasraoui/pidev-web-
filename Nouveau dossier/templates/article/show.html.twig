{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{% trans %}IdItem{% endtrans %}</th>
                <td>{{ article.idArticle }}</td>
            </tr>
            <tr>
                <th>{% trans %}IdEvent{% endtrans %}</th>
                <td>{{ article.idEvenement }}</td>
            </tr>
            <tr>
                <th>{% trans %}Title{% endtrans %}</th>
                <td>{{ article.titre }}</td>
            </tr>
            <tr>
                <th>{% trans %}Content{% endtrans %}</th>
                <td>{{ article.contenu }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('article_index') }}">{% trans %}back to list{% endtrans %}</a>

    <a href="{{ path('article_edit', {'idArticle': article.idArticle}) }}">{% trans %}edit{% endtrans %}</a>

    {{ include('article/_delete_form.html.twig') }}
{% endblock %}
