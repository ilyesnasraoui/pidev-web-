
{% extends 'base.html.twig' %}

{% block title %}Users index{% endblock %}

{% block body %}
    <h1>Users index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Fname</th>
                <th>Lname</th>
                <th>Idcard</th>
                <th>Phone</th>
                <th>Role</th>
                <th>Blocked</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.fname }}</td>
                <td>{{ user.lname }}</td>
                <td>{{ user.idcard }}</td>
                <td>{{ user.phone }}</td>
                <td>{{ user.role }}</td>
                <td>{{ user.blocked }}</td>
                <td>
                    <a href="{{ path('users_show', {'idUser': user.idUser}) }}">show</a>
 <!-- <a href="{{ path('users_edit', {'idUser': user.idUser}) }}">edit</a> -->

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {{ knp_pagination_render(users) }}
   <!-- <a href="{{ path('users_new') }}">Create new</a> -->
{% endblock %}



