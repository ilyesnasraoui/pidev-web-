{% extends 'base.html.twig' %}

{% block title %} {% trans %}Item index{% endtrans %}{% endblock %}

{% block body %}



    <h1>{% trans %}Article index{% endtrans %}</h1>




    {{ form_start(form) }}

    <div class="form-row align-items-end" >
        <div class="col">
            {{ form_row(form.nom) }}
        </div>

        <div class="col">
            <div class="form-group">
                <button type="submit" class="btn btn-success">{% trans %}Reaserch{% endtrans %}</button>
            </div>
        </div>
    </div>
    {{ form_end(form) }}





    <table class="table">
        <thead>
        <tr>
            <th>IdArticle</th>
            <th>IdEvenement</th>
            <th>Titre</th>
            <th>Contenu</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.idArticle }}</td>
                <td>{{ article.idEvenement }}</td>
                <td>{{ article.titre }}</td>
                <td>{{ article.contenu }}</td>
                <td>
                    <a href="{{ path('article_show', {'idArticle': article.idArticle}) }}">show</a>
                    <a href="{{ path('article_edit', {'idArticle': article.idArticle}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('article_new') }}">Create new</a>
{% endblock %}
