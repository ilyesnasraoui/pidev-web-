{% extends 'base.html.twig' %}

{% block title %}Edit Article{% endblock %}

{% block body %}
    <h1>Edit Article</h1>

    {{ form_start(form) }}
    Event
    <br>
    <select id="{{ form.idEvenement.vars.id }}" name="{{ form.idEvenement.vars.full_name }}">
        {%  for evenement in evenements %}
            <option value="{{ evenement.idEvenement }}">
                {{ evenement.nomEvenement}}
            </option>
        {% endfor %}
    </select>
    {% do form.idEvenement.setRendered %}
    <br>
    Title
    {{ form_widget(form.titre) }}
    Content
    {{ form_widget(form.contenu) }}

    <button class="btn">{{ button_label|default('Update') }}</button>


    {{ form_end(form) }}
    <a href="{{ path('article_index') }}">back to list</a>

    {{ include('article/_delete_form.html.twig') }}
{% endblock %}
