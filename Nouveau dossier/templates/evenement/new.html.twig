{% extends 'base.html.twig' %}

{% block title %}New Evenement{% endblock %}

{% block body %}

    <h1>Create new Evenement</h1>
    {{ form_start(form) }}
    Category
    <br>
    <select id="{{ form.idCatEvenement.vars.id }}" name="{{ form.idCatEvenement.vars.full_name }}">
        {%  for categorieevent in categorieevent %}
            <option value="{{ categorieevent.idCatEvent }}">
                {{ categorieevent.nomCategorieEv}}
            </option>
        {% endfor %}
    </select>
    {% do form.idCatEvenement.setRendered %}
    <br>
    User
    <br>
    <select id="{{ form.idUser.vars.id }}" name="{{ form.idUser.vars.full_name }}">
        {%  for user in users %}
            <option value="{{ user.idUser }}">
                {{ user.username}}
            </option>
        {% endfor %}
    </select>
    {% do form.idUser.setRendered %}
    <br>
    Name
    {{ form_widget(form.nomEvenement) }}
    date
    <br>
    <input type="date" id="{{ form.dateEvenement.vars.id }}" name="{{ form.dateEvenement.vars.full_name }}">

    {% do form.dateEvenement.setRendered %}
    <br>
    duration
    {{ form_widget(form.dureeEvenement)}}
    Event post
    <input type="file" id="{{ form.imageEvnement.vars.id }}" name="{{ form.imageEvnement.vars.full_name }}"
           accept="image/png, image/jpeg, image/jpg">

    {% do form.imageEvnement.setRendered %}
    description
    {{ form_widget(form.description) }}
    validate
    {{ form_widget(form.validate) }}
    <button class="btn">{{ button_label|default('Save') }}</button>
    {{ form_end(form) }}


    <a href="{{ path('evenement_index') }}">back to list</a>
{% endblock %}

