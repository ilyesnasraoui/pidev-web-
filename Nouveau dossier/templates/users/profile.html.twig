{% extends 'basefront.html.twig' %}
{% block body %}
    <div class="hero user-hero">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="hero-ct">
                        <h1>{{ app.user.fname }} {{ app.user.lname }}â€™s profile</h1>
                        <ul class="breadcumb">
                            <li class="active"><a href="#">Home</a></li>
                            <li> <span class="ion-ios-arrow-right"></span>Profile</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="page-single">
        <div class="container">
            <div class="row ipad-width">
                <div class="col-md-3 col-sm-12 col-xs-12">
                    <div class="user-information">
                        <div class="user-img">
                            <a href="#"><img src="{{ asset('front/images/uploads/avatar.p') }}" alt=""><br></a>
                            <a href="#" class="redbtn">Change avatar</a>
                        </div>
                        <div class="user-fav" id="profile">
                            <p>Account Details</p>
                            <ul>
                                <li  class="active"><a href="#profile">Profile</a></li>
                                <li><a href="userfavoritelist.html">Favorite movies</a></li>
                                <li><a href="userrate.html">Rated movies</a></li>
                            </ul>
                        </div>
                        <div class="user-fav">
                            <p>Others</p>
                            <ul>
                                <li><a href="#changep">Change password</a></li>
                                {% if ((app.user.role=="admin") or (app.user.role=="salle")) %}
                                <li><a href="/dashboard">Go to dashboard</a></li>
                                {% endif %}
                                <li><a href="/logout">Log out</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-9 col-sm-12 col-xs-12" >
                    <div class="form-style-1 user-pro" action="#">
                        <form action="changepd" method="post" class="user">
                            <h4>01. Profile details</h4>
                            <div class="row">
                                <div class="col-md-6 form-it">
                                    <label>Username</label>
                                    <input type="text" name="username" value="{{app.user.username}}" >
                                </div>
                                <div class="col-md-6 form-it">
                                    <label>Email Address</label>
                                    <input type="text" name="email" value="{{app.user.email}}">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 form-it">
                                    <label>First Name</label>
                                    <input type="text" name="firstname" value="{{app.user.fname}}">
                                </div>
                                <div class="col-md-6 form-it">
                                    <label>Last Name</label>
                                    <input type="text" name="lastname" value="{{app.user.lname}}">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 form-it">
                                    <label>Phone number</label>
                                    <input type="text" name="phone" value="{{app.user.phone}}">
                                </div>
                                <div class="col-md-6 form-it">
                                    <label>Id card</label>
                                    <input type="text" name="idcard" value="{{app.user.idcard}}">
                                </div>

                            </div>

                            <div class="row">
                                <div class="col-md-2" id="changep">
                                    <input class="submit" type="submit" value="save">
                                </div>
                            </div>
                        </form>
                        <div >
                        <form action="changepwd" class="password">
                            <h4>02. Change password</h4>
                            <div class="row">
                                <div class="col-md-6 form-it">
                                    <label>Old Password</label>
                                    <input type="password" name="oldpwd" placeholder="**********">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 form-it">
                                    <label>New Password</label>
                                    <input type="password" name="newpwd" placeholder="***************">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 form-it">
                                    <label>Confirm New Password</label>
                                    <input type="password" name="confirmpwd" placeholder="*************** ">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-2">
                                    <input class="submit" type="submit" value="change">
                                </div>
                            </div>
                        </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
